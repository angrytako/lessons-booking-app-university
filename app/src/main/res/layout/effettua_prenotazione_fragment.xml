<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <LinearLayout
        android:layout_width="409dp"
        android:layout_height="729dp"
        android:orientation="vertical"
        tools:layout_editor_absoluteX="1dp"
        tools:layout_editor_absoluteY="1dp">

        <TextView
            android:id="@+id/utente"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Utente: "
            android:gravity="center"
            android:textSize="18dp"
            android:textColor="@color/black"/>


        <TextView
            android:id="@+id/corso"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Corso: "
            android:textAlignment="gravity"
            android:textAppearance="@style/TextAppearance.AppCompat.Medium"
            android:textColor="@color/black"
            android:textStyle="bold|italic" />

        <TextView
            android:id="@+id/giorno"
            android:textColor="@color/black"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Giorno: " />

        <TextView
            android:id="@+id/ora"
            android:textColor="@color/black"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Orario: " />

        <TextView
            android:id="@+id/textView6"
            android:textColor="@color/black"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Scegli il docente con cui effettuare la ripetizione:" />

        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/docentiList"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" >

        </androidx.recyclerview.widget.RecyclerView>


        <TextView
            android:id="@+id/sceltaAdmin"
            android:textColor="@color/black"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Scegli l'utente su cui effettuare la prenotazione:"/>

        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/utenti"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" >
        </androidx.recyclerview.widget.RecyclerView>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <Button
                android:id="@+id/annulla"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:backgroundTint="#BD4620"
                android:backgroundTintMode="add"
                android:text="Annulla" />

            <Button
                android:id="@+id/prenota"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:backgroundTint="#25AC2B"
                android:backgroundTintMode="add"
                android:text="Prenota" />

        </LinearLayout>



    </LinearLayout>
</androidx.constraintlayout.widget.ConstraintLayout>